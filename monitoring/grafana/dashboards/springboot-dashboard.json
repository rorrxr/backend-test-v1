{
  "id": null,
  "title": "Spring Boot Metrics",
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Request Count",
      "targets": [
        {
          "expr": "sum by (uri, status) (http_server_requests_seconds_count)",
          "legendFormat": "{{uri}} [{{status}}]"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "HTTP Response Time (avg seconds)",
      "targets": [
        {
          "expr": "avg by (uri) (rate(http_server_requests_seconds_sum[1m]) / rate(http_server_requests_seconds_count[1m]))",
          "legendFormat": "{{uri}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "JVM Memory Used (bytes)",
      "targets": [
        { "expr": "sum(jvm_memory_used_bytes{area='heap'})", "legendFormat": "Heap" },
        { "expr": "sum(jvm_memory_used_bytes{area='nonheap'})", "legendFormat": "Non-Heap" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Process CPU Usage",
      "targets": [
        { "expr": "process_cpu_usage", "legendFormat": "Process CPU" },
        { "expr": "system_cpu_usage", "legendFormat": "System CPU" }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Payment Success vs Fail",
      "targets": [
        { "expr": "payment_success_total", "legendFormat": "Success" },
        { "expr": "payment_fail_total", "legendFormat": "Fail" }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Payment Success Rate (%)",
      "targets": [
        {
          "expr": "(payment_success_total / (payment_success_total + payment_fail_total)) * 100"
        }
      ],
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      }
    }
  ]
}
